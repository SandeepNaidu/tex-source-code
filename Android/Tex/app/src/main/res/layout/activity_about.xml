<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".settings.ui.SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@null"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/about"
        app:titleTextAppearance="@style/settingStyle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/main_toolbar">

            <TextView
                android:id="@+id/help_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_16"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_18"
                android:text="@string/about_title"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/about_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="@dimen/dp_9"
                android:paddingHorizontal="@dimen/dp_24"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_24"
                android:text="@string/about_content"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toBottomOf="@+id/help_title"
                tools:text="The big benefit to tagging people and pages on social media is that you’re instantly connected to these users and companies. Your update links directly to their account, and the users and companies get a notification that they’ve been mentioned." />


            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:background="@color/drawable_outline_grey"
                app:layout_constraintTop_toBottomOf="@id/about_content" />

            <TextView
                android:id="@+id/ethic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_8"
                android:drawablePadding="@dimen/dp_16"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_18"
                android:text="@string/ethic_title"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/separator" />

            <TextView
                android:id="@+id/ethic_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="@dimen/dp_9"
                android:paddingHorizontal="@dimen/dp_24"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/etc_1"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_16"
                app:drawableStartCompat="@drawable/shape_bullet_dots_"
                app:layout_constraintTop_toBottomOf="@+id/ethic_title" />

            <TextView
                android:id="@+id/ethic_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="@dimen/dp_9"
                android:paddingHorizontal="@dimen/dp_24"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/etc_1"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_16"
                app:drawableStartCompat="@drawable/shape_bullet_dots_"
                app:layout_constraintTop_toBottomOf="@+id/ethic_1" />

            <TextView
                android:id="@+id/ethic_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="@dimen/dp_9"
                android:paddingHorizontal="@dimen/dp_24"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/etc_1"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_16"
                app:drawableStartCompat="@drawable/shape_bullet_dots_"
                app:layout_constraintTop_toBottomOf="@+id/ethic_2" />

            <TextView
                android:id="@+id/ethic_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="@dimen/dp_9"
                android:paddingHorizontal="@dimen/dp_24"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/etc_1"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_16"
                app:drawableStartCompat="@drawable/shape_bullet_dots_"
                app:layout_constraintTop_toBottomOf="@+id/ethic_3" />


            <TextView
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_16"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_18"
                android:paddingStart="@dimen/dp_8"
                android:text="@string/privacy_policy"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_16"
                app:drawableEndCompat="@drawable/right_arrow"
                app:layout_constraintTop_toBottomOf="@+id/ethic_4" />

            <TextView
                android:id="@+id/terms_of_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_16"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_18"
                android:paddingStart="@dimen/dp_8"
                android:text="@string/terms_of_use"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_16"
                app:drawableEndCompat="@drawable/right_arrow"
                app:layout_constraintTop_toBottomOf="@+id/privacy" />

            <TextView
                android:id="@+id/open_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_16"
                android:ellipsize="marquee"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_18"
                android:paddingStart="@dimen/dp_8"
                android:text="@string/open_source_libraries"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_16"
                app:drawableEndCompat="@drawable/right_arrow"
                app:layout_constraintTop_toBottomOf="@+id/terms_of_use" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>