<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_56"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_24">

        <TextView
            android:id="@+id/radio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/event_type"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/_16sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_24"
            android:orientation="horizontal">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/online_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/radio_round_outline_selector"
                android:button="@null"
                android:checked="true"
                android:elevation="@dimen/dp_8"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:text="@string/online"
                android:textAlignment="gravity"
                android:textColor="@color/text_main"
                android:textSize="@dimen/_16sp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/inperson_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/radio_round_outline_selector"
                android:button="@null"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:text="@string/inperson"
                android:textAlignment="gravity"
                android:textColor="@color/text_main"
                android:textSize="@dimen/_16sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/event_format_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/event_format"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/_16sp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/event_format_tv"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="?attr/editTextBackground"
            android:entries="@array/event_format"
            android:fontFamily="@font/gilroy_medium"
            android:paddingBottom="@dimen/dp_8"
            android:spinnerMode="dropdown"
            android:textColor="@color/text_main"
            android:textSize="@dimen/sp_24"
            android:theme="@style/spinnerItemStyle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/event_name_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:hint="@string/event_name"
            android:textColorHint="@color/text_hint"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeErrorColor="@color/text_underline_error"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextAppearance="@style/TextLabel"
            app:hintTextColor="@color/text_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center_vertical"
                android:inputType="textCapWords"
                android:letterSpacing="0.04"
                android:lines="1"
                android:paddingStart="2dp"
                android:paddingBottom="6dp"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24"
                tools:ignore="Autofill,TextFields" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/edt_datetime"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="66dp"
            android:background="?attr/editTextBackground"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center_vertical"
            android:hint="@string/date_time"
            android:letterSpacing="0.04"
            android:lines="1"
            android:paddingEnd="@dimen/dp_28"
            android:textColor="@color/text_main"
            android:textSize="@dimen/sp_24"
            android:theme="@style/spinnerItemStyle"
            app:drawableEndCompat="@drawable/ic_calendar_date"
            tools:ignore="Autofill,TextFields" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ext_event_link_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:hint="@string/external_event_link"
            android:textColorHint="@color/text_hint"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeErrorColor="@color/text_underline_error"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextAppearance="@style/TextLabel"
            app:hintTextColor="@color/text_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ext_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center_vertical"
                android:inputType="textCapWords"
                android:letterSpacing="0.04"
                android:lines="1"
                android:paddingStart="2dp"
                android:paddingBottom="6dp"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24"
                tools:ignore="Autofill,TextFields" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/desc_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:hint="@string/description"
            android:textColorHint="@color/text_hint"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeErrorColor="@color/text_underline_error"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextAppearance="@style/TextLabel"
            app:hintTextColor="@color/text_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/desc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center_vertical"
                android:inputType="textCapWords"
                android:letterSpacing="0.04"
                android:lines="1"
                android:paddingStart="2dp"
                android:paddingBottom="6dp"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24"
                tools:ignore="Autofill,TextFields" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_event_banner"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_24"
            android:background="@drawable/rounded_outline_gray_light"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center_vertical"
            android:hint="@string/pick_event"
            android:letterSpacing="0.04"
            android:lines="1"
            android:paddingVertical="@dimen/dp_8"
            android:paddingHorizontal="@dimen/dp_16"
            android:textColor="@color/text_main"
            android:textSize="@dimen/sp_14"
            android:theme="@style/spinnerItemStyle"
            app:drawableEndCompat="@drawable/ic_document"
            app:drawableTint="@color/text_main"
            tools:ignore="Autofill,TextFields" />

        <ImageView
            android:id="@+id/iv_event_banner"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:paddingEnd="@dimen/dp_28"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <TextView
            android:id="@+id/terms_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center_horizontal"
            android:text="@string/by_continuing_you_agree_with_our_event_policy"
            android:textColor="@color/text_light"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/btn_create_event"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="@dimen/dp_26"
            android:background="@drawable/btn_round_grey"
            android:ems="7"
            android:enabled="true"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/create_event"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>