<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".aritist_profile.ui.ProfileSettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@null"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/view_analytics"
        app:titleTextAppearance="@style/settingStyle" />

    <TextView
        android:id="@+id/profile_views_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:drawableStart="@drawable/ic_profile_post"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_8"
        android:text="0 profile views"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar" />

    <TextView
        android:id="@+id/profile_views_sub_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="33dp"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_regular"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:text="@string/discover_who_s_viewed_your_profile"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/profile_views_tv" />

    <TextView
        android:id="@+id/post_reaction_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:drawableStart="@drawable/ic_post_profile"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_8"
        android:text="0 post reactions"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/profile_views_sub_tv" />

    <TextView
        android:id="@+id/post_reaction_sub_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="33dp"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_regular"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:text="@string/check_out_who_s_engaging_with_your_posts"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/post_reaction_tv" />

    <TextView
        android:id="@+id/search_appear_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:drawableStart="@drawable/ic_profile_post"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_8"
        android:text="0 search appearances"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/post_reaction_sub_tv" />

    <TextView
        android:id="@+id/search_appear_sub_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="33dp"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_regular"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:text="@string/see_how_often_you_appear"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/search_appear_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>