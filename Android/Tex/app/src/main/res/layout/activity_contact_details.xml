<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".aritist_profile.ui.ProfileSettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@null"
        app:menu="@menu/contact_menu"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/contact_details"
        app:titleTextAppearance="@style/settingStyle" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardBackgroundColor="#f2f2f2"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_36"
        app:contentPadding="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/gilroy_medium"
                android:text="@string/mobile_no"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="@font/gilroy_bold"
                android:text="@string/mobile_no"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/gilroy_medium"
                android:text="Email ID"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="@font/gilroy_bold"
                android:text="No email Id"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/gilroy_medium"
                android:text="@string/alternative_mobile_number"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/alternatemob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="@font/gilroy_bold"
                android:text="@string/no_alternate_mob"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/gilroy_medium"
                android:text="@string/alternative_email_id"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/alternateemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="@font/gilroy_bold"
                android:text="@string/no_alternate_email"
                android:textColor="@color/text_main"
                android:textSize="@dimen/sp_24"
                android:layout_marginBottom="@dimen/dp_30"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <CheckedTextView
        android:id="@+id/detail_visiblity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_regular"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:drawableEnd="@drawable/switch_on_off"
        android:paddingVertical="@dimen/dp_6"
        android:text="Contact details visibility"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toBottomOf="@id/card" />

</androidx.constraintlayout.widget.ConstraintLayout>