<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".aritist_profile.ui.ProfileSettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@null"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/contact_details"
        app:titleTextAppearance="@style/settingStyle" />

    <TextView
        android:id="@+id/tv_subttext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/gilroy_medium"
        android:lineSpacingExtra="8dp"
        android:text="Please enter valid email id/mobile number to receive OTP for verification"
        android:textColor="@color/text_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/clear_id_mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:padding="6dp"
        android:src="@drawable/ic_close_red"
        android:translationY="@dimen/dp_3"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/mobile_til"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mobile_til" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mobile_til"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_48"
        android:hint="@string/mobile_no"
        android:textColorHint="@color/text_hint"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="filled"
        app:boxStrokeErrorColor="@color/text_underline_error"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextAppearance="@style/TextLabel"
        app:hintTextColor="@color/text_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subttext"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:letterSpacing="0.04"
            android:lines="1"
            android:maxLength="10"
            android:paddingStart="2dp"
            android:paddingEnd="60dp"
            android:paddingBottom="6dp"
            android:textColor="@color/text_main"
            android:textSize="16sp"
            tools:ignore="Autofill,TextFields" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/clear_id_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:padding="6dp"
        android:src="@drawable/ic_close_red"
        android:translationY="@dimen/dp_3"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/email_til"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/email_til" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_til"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_48"
        android:hint="@string/email_id"
        android:textColorHint="@color/text_hint"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="filled"
        app:boxStrokeErrorColor="@color/text_underline_error"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextAppearance="@style/TextLabel"
        app:hintTextColor="@color/text_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobile_til"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:letterSpacing="0.04"
            android:lines="1"
            android:paddingStart="2dp"
            android:paddingEnd="60dp"
            android:paddingBottom="6dp"
            android:textColor="@color/text_main"
            android:textSize="16sp"
            tools:ignore="Autofill,TextFields" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/clear_id_alt_mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:padding="6dp"
        android:src="@drawable/ic_close_red"
        android:translationY="@dimen/dp_3"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/alternative_mob_til"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alternative_mob_til" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/alternative_mob_til"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_48"
        android:hint="@string/alternative_mobile_number"
        android:textColorHint="@color/text_hint"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="filled"
        app:boxStrokeErrorColor="@color/text_underline_error"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextAppearance="@style/TextLabel"
        app:hintTextColor="@color/text_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_til"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_alternative_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:letterSpacing="0.04"
            android:lines="1"
            android:maxLength="10"
            android:paddingStart="2dp"
            android:paddingEnd="60dp"
            android:paddingBottom="6dp"
            android:textColor="@color/text_main"
            android:textSize="16sp"
            tools:ignore="Autofill,TextFields" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/clear_id_alt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:padding="6dp"
        android:src="@drawable/ic_close_red"
        android:translationY="@dimen/dp_3"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/alternative_email_til"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alternative_email_til" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/alternative_email_til"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_48"
        android:hint="@string/alternative_email_id"
        android:textColorHint="@color/text_hint"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="filled"
        app:boxStrokeErrorColor="@color/text_underline_error"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextAppearance="@style/TextLabel"
        app:hintTextColor="@color/text_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alternative_mob_til"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_alternative_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:letterSpacing="0.04"
            android:lines="1"
            android:paddingStart="2dp"
            android:paddingEnd="60dp"
            android:paddingBottom="6dp"
            android:textColor="@color/text_main"
            android:textSize="16sp"
            tools:ignore="Autofill,TextFields" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/btn_round_grey"
        android:ems="7"
        android:enabled="false"
        android:fontFamily="@font/gilroy_medium"
        android:text="@string/update"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>