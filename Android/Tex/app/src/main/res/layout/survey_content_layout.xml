<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_24"
    android:paddingEnd="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_14">

    <TextView
        android:id="@+id/question_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy_regular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Does understanding history gives us solution for the future?" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/options_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/question_tv" />

    <TextView
        android:id="@+id/post_votes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:fontFamily="@font/gilroy_regular"
        android:maxLines="1"
        tools:text="67 Votes"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_ll" />

    <View
        android:id="@+id/dot_tv"
        android:layout_width="@dimen/dp_4"
        android:layout_height="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/circle_grey"
        app:layout_constraintBottom_toBottomOf="@+id/post_votes_tv"
        app:layout_constraintStart_toEndOf="@+id/post_votes_tv"
        app:layout_constraintTop_toTopOf="@+id/post_votes_tv" />

    <TextView
        android:id="@+id/post_time_left_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_12"
        android:fontFamily="@font/gilroy_regular"
        android:maxLines="1"
        android:text="7h Left"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/sp_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/dot_tv"
        app:layout_constraintTop_toBottomOf="@+id/options_ll" />

</androidx.constraintlayout.widget.ConstraintLayout>