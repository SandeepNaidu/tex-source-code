<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dp_24"
        tools:context=".main.ui.avid.avidCamera.ui.AvidPreviewActivity">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#F0F2F6"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription,UnusedAttribute,UseAppTint" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/preview"
            android:textColor="@color/text_main"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/back_btn"
            app:layout_constraintStart_toEndOf="@+id/back_btn"
            app:layout_constraintTop_toTopOf="@+id/back_btn"
            tools:ignore="ContentDescription" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_24"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_btn"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp">

                <ImageView
                    android:id="@+id/avid_preview_img"
                    android:layout_width="176dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="6:9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_edit_cover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_21"
                    android:fontFamily="@font/gilroy_medium"
                    android:gravity="center"
                    android:text="@string/edit_cover"
                    android:textColor="@color/text_main"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/avid_preview_img"
                    app:layout_constraintEnd_toEndOf="@+id/avid_preview_img"
                    app:layout_constraintStart_toStartOf="@+id/avid_preview_img"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_subttext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="@dimen/dp_14"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="@string/this_avid_is_for"
                    android:textColor="@color/text_main"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/avid_preview_img"
                    app:layout_constraintTop_toTopOf="@+id/avid_preview_img"
                    tools:ignore="ContentDescription" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_subttext"
                    app:layout_constraintTop_toBottomOf="@+id/tv_subttext">

                    <RadioButton
                        android:id="@+id/audition_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="true"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="@string/audition"
                        android:textColor="@color/text_main"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/public_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:fontFamily="@font/gilroy_medium"
                        android:foregroundTint="@color/colorPrimary"
                        android:text="@string/public_txt"
                        android:textColor="@color/text_main"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/private_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="@string/private_txt"
                        android:textColor="@color/text_main"
                        android:textSize="16sp" />
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/title_til"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColorHint="@color/text_hint"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeErrorColor="@color/text_underline_error"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/text_hint"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/avid_preview_img"
                    app:layout_constraintTop_toBottomOf="@+id/avid_preview_img"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:placeholderTextColor="@color/text_hint_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/gilroy_medium"
                        android:gravity="center_vertical"
                        android:hint="@string/title_of_avid"
                        android:inputType="textPersonName|textCapWords"
                        android:letterSpacing="0.04"
                        android:lines="1"
                        android:maxLength="256"
                        android:paddingStart="2dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        app:hintEnabled="false"
                        tools:ignore="Autofill,TextFields" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/caption_til"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColorHint="@color/text_hint"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeErrorColor="@color/text_underline_error"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/TextLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/title_til"
                    app:layout_constraintTop_toBottomOf="@+id/title_til"
                    app:layout_constraintVertical_chainStyle="packed">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/gilroy_medium"
                        android:gravity="center_vertical"
                        android:hint="@string/caption_hnt"
                        android:inputType="textPersonName|textCapWords"
                        android:letterSpacing="0.04"
                        android:lines="1"
                        android:maxLength="256"
                        android:paddingStart="2dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="Autofill,TextFields" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_tag_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColorHint="@color/text_hint"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/TextLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/caption_til"
                    app:layout_constraintTop_toBottomOf="@+id/caption_til">

                    <com.hendraanggrian.appcompat.widget.SocialAutoCompleteTextView
                        android:id="@+id/edt_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:layout_marginTop="@dimen/dp_24"
                        android:fontFamily="@font/gilroy_medium"
                        android:gravity="center_vertical"
                        android:hint="@string/tag_your_avid"
                        android:inputType="textPersonName|textCapWords"
                        android:letterSpacing="0.04"
                        android:lines="1"
                        android:maxLength="256"
                        android:maxLines="3"
                        android:paddingStart="2dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="Autofill,TextFields" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_save_draft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:fontFamily="@font/gilroy_medium"
                    android:gravity="center"
                    android:text="@string/save_as_draft"
                    android:textColor="@color/text_main"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_done"
                    app:layout_constraintEnd_toStartOf="@+id/btn_done"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btn_done"
                    tools:ignore="ContentDescription" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_done"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="@dimen/dp_36"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:background="@drawable/btn_round_grey"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/gilroy_medium"
                    android:icon="@drawable/ic_forward_arrow_grey"
                    android:text="@string/save_video"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:iconTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_tag_til"
                    app:layout_constraintVertical_bias="1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>