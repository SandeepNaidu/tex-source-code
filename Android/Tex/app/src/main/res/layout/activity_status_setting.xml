<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".aritist_profile.ui.ProfileSettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@null"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/status_settings"
        app:titleTextAppearance="@style/settingStyle" />

    <TextView
        android:id="@+id/status_avail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_32"
        android:fontFamily="@font/gilroy_medium"
        android:text="@string/status_of_availability"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/status_avail_tv"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="@dimen/dp_24"
        android:background="?attr/editTextBackground"
        android:entries="@array/status"
        android:fontFamily="@font/gilroy_medium"
        android:paddingBottom="@dimen/dp_8"
        android:spinnerMode="dropdown"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_24"
        android:theme="@style/spinnerItemStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_avail_title" />

    <TextView
        android:id="@+id/online_status_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_32"
        android:fontFamily="@font/gilroy_medium"
        android:text="@string/online_status"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_avail_tv" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/online_status_tv"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="@dimen/dp_24"
        android:background="?attr/editTextBackground"
        android:entries="@array/status"
        android:fontFamily="@font/gilroy_medium"
        android:paddingBottom="@dimen/dp_8"
        android:spinnerMode="dropdown"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_24"
        android:theme="@style/spinnerItemStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/online_status_title" />

</androidx.constraintlayout.widget.ConstraintLayout>