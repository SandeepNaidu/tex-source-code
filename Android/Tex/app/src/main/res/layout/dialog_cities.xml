<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_bg_white"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="@dimen/dp_25"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <View
        android:id="@+id/lip"
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/lip_color" />

    <EditText
        android:drawableStart="@drawable/search"
        android:background="@drawable/rounded_gray_light"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_24"
        android:drawablePadding="@dimen/dp_24"
        android:fontFamily="@font/gilroy_regular"
        android:lineSpacingExtra="8dp"
        android:paddingHorizontal="12dp"
        android:hint="@string/search_a_city"
        android:textColorHint="@color/text_light"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/rv_cities"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.appcompat.widget.LinearLayoutCompat>