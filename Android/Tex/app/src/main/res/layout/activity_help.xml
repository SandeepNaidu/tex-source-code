<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".settings.ui.SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@null"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/help"
        app:titleTextAppearance="@style/settingStyle" />

    <TextView
        android:id="@+id/help_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingVertical="@dimen/dp_18"
        android:text="@string/help_center"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar" />


    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:background="@drawable/rounded_outline_gray_light"
        android:drawablePadding="@dimen/dp_8"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:padding="@dimen/dp_13"
        android:text="@string/email"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_14"
        app:drawableStartCompat="@drawable/ic_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_title" />

    <TextView
        android:id="@+id/chat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:background="@drawable/rounded_outline_gray_light"
        android:drawablePadding="@dimen/dp_8"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:padding="@dimen/dp_13"
        android:text="@string/chat"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_14"
        app:drawableStartCompat="@drawable/ic_email"
        app:layout_constraintEnd_toStartOf="@+id/call_tv"
        app:layout_constraintStart_toEndOf="@+id/email_tv"
        app:layout_constraintTop_toBottomOf="@id/help_title" />

    <TextView
        android:id="@+id/call_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:background="@drawable/rounded_outline_gray_light"
        android:drawablePadding="@dimen/dp_8"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:padding="@dimen/dp_13"
        android:text="@string/call"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_14"
        app:drawableStartCompat="@drawable/ic_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_title" />

    <TextView
        android:id="@+id/faq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_14"
        android:drawablePadding="@dimen/dp_16"
        android:ellipsize="marquee"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingVertical="@dimen/dp_18"
        android:text="@string/faq"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/email_tv" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/drawable_outline_grey"
        app:layout_constraintTop_toBottomOf="@id/faq_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_faqs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_faq_list" />

</androidx.constraintlayout.widget.ConstraintLayout>