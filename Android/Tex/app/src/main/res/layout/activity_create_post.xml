<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    tools:context=".main.ui.avid.avidCamera.ui.TakesActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:backgroundTint="#F0F2F6"
        android:padding="@dimen/dp_6"
        android:src="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,UnusedAttribute,UseAppTint" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:fontFamily="@font/gilroy_bold"
        android:text="@string/new_post"
        android:textColor="@color/text_main"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_btn"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toTopOf="@+id/back_btn"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="130dp"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/switch_corner_rounded_outline"
        android:entries="@array/post_type"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_7"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />


    <FrameLayout
        android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_34"
        android:paddingHorizontal="@dimen/dp_16"
        app:layout_constraintBottom_toTopOf="@+id/recent_spinner"
        app:layout_constraintDimensionRatio="34:22"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_34"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"></FrameLayout>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/recent_spinner"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/switch_corner_rounded_outline"
        android:entries="@array/preview"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_7"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView2"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_container" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_bottom_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="btn_next, recent_spinner,recyclerView2,btn_gallery,preview_container"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/btn_round_grey"
        android:drawableEnd="@drawable/ic_forward_arrow_grey"
        android:drawableTint="@color/white"
        android:ems="7"
        android:enabled="true"
        android:fontFamily="@font/gilroy_medium"
        android:text="@string/next"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/recent_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recent_spinner"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_12"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/dp_8"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent_spinner"
        app:spanCount="3"
        tools:itemCount="12"
        tools:listitem="@layout/thumbnail_media_item" />

    <TextView
        android:id="@+id/no_takes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center"
        android:text="@string/no_recent_file"
        android:textColor="@color/text_hint"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerView2"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/btn_round_grey"
        android:ems="7"
        android:enabled="true"
        android:fontFamily="@font/gilroy_medium"
        android:text="@string/gallery"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_takes" />

</androidx.constraintlayout.widget.ConstraintLayout>